{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "plugin:flowtype/recommended",
        "prettier",
        "prettier/flowtype",
        "prettier/react"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "react-hooks",
        "import",
        "flowtype",
        "prettier"
    ],
    "rules": {
        "import/no-duplicates": "error",
        "import/order": [
            "error",
            {
            "groups": [
                ["builtin", "external"],
                "internal",
                ["parent", "sibling", "index"]
            ],
            "newlines-between": "always",
            "alphabetize": {
                "order": "asc"
            }
            }
        ],
        "react/prop-types": "off",
        "react-hooks/exhaustive-deps": "warn",
        "react-hooks/rules-of-hooks": "error",
        "prettier/prettier": ["error"]
    },
    "settings": {
      "import/resolver": {
        "node": {
          "moduleDirectory": [".", "node_modules"]
        }
      },
      "react": {
        "version": "detect"
      }
    }
}
